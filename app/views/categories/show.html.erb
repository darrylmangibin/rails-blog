<%= render 'shared/pageTitle', title:"Category: #{@category.name}" %>

<div align="center">
    <%= will_paginate @category_articles %>
</div>
<div align="center">
	<% @category_articles.each do |category| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li class="article-title">
                        <%= link_to "#{category.title}", category_path(category) %>
                    </li>
                </div>
            </div>
        </ul>
	<% end %>
</div>
<div align="center">
    <%= will_paginate @category_articles %>
</div>